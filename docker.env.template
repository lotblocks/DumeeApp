# Dumee Docker Environment Configuration
# Copy this to .env and customize for your deployment

# Application Configuration
APP_TITLE=Dumee
HOST=0.0.0.0
PORT=3080
NODE_ENV=production

# Domain Configuration
DOMAIN_CLIENT=https://dum.ee
DOMAIN_SERVER=https://dum.ee

# Database Configuration
MONGO_URI=mongodb://mongodb:27017/Dumee

# Search Configuration  
MEILI_HOST=http://meilisearch:7700
MEILI_HTTP_ADDR=meilisearch:7700
MEILI_NO_ANALYTICS=true

# RAG API Configuration
RAG_PORT=8000
RAG_API_URL=http://rag_api:8000

# Redis Configuration (if using Redis)
REDIS_URI=redis://redis:6379
REDIS_KEY_PREFIX=dumee:

# Security Keys (GENERATE NEW VALUES FOR PRODUCTION!)
JWT_SECRET=your_jwt_secret_here_replace_in_production
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_replace_in_production
CREDS_KEY=your_32_character_credentials_key
CREDS_IV=your_16_character_credentials_iv

# Docker Build Configuration
DUMEE_DOCKER_TAG=latest
DOCKER_REMOTE_REGISTRY=ghcr.io/your-username

# Optional: External Services
# OPENAI_API_KEY=your_openai_api_key
# ANTHROPIC_API_KEY=your_anthropic_api_key
# GOOGLE_API_KEY=your_google_api_key

# Optional: Analytics and Monitoring
# POSTHOG_API_KEY=your_posthog_key
# SENTRY_DSN=your_sentry_dsn