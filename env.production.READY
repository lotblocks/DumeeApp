EMAIL_PORT=587
EMAIL_USERNAME=noreply@dum.ee
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=Dumee <noreply@dum.ee>
EMAIL_FROM_NAME=Dumee

# =================================
# SOCIAL LOGIN CONFIGURATION (⚠️ CONFIGURE THESE)
# =================================
ALLOW_SOCIAL_LOGIN=true

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=https://dum.ee/oauth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=https://dum.ee/oauth/github/callback

# Discord OAuth
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_CALLBACK_URL=https://dum.ee/oauth/discord/callback

# =================================
# MONITORING & ANALYTICS (⚠️ CONFIGURE THESE)
# =================================
# Application monitoring
ENABLE_MONITORING=true
LOG_LEVEL=info
LOG_FORMAT=json

# Google Analytics (optional)
# ANALYTICS_GTM_ID=GTM-XXXXXXX

# Sentry Error Tracking (recommended)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =================================
# BACKUP & DISASTER RECOVERY (⚠️ CONFIGURE THESE)
# =================================
# Database backup configuration
ENABLE_AUTO_BACKUP=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_TYPE=s3
BACKUP_S3_BUCKET=dumee-backups-production

# =================================
# REGULATORY COMPLIANCE
# =================================
# GDPR compliance
ENABLE_GDPR_COMPLIANCE=true
DATA_RETENTION_DAYS=365
ENABLE_USER_DATA_EXPORT=true

# Terms and Privacy
TERMS_OF_SERVICE_URL=https://dum.ee/terms
PRIVACY_POLICY_URL=https://dum.ee/privacy

# =================================
# DEVELOPMENT & DEBUGGING (DISABLE IN PRODUCTION)
# =================================
DEBUG_MODE=false
ENABLE_PLAYGROUND=false
ENABLE_DEBUG_ROUTES=false
VERBOSE_LOGGING=false